- @site_name = ""
%meta{:charset => "utf-8"}
%title= page_title
/ SEO
- if description = page_description and not description.empty?
  %meta{:name => "description", :content => description}
- if @page_robots
  %meta{:name => "robots", :content => @page_robots}
/ Favicon
%link{:href => "/favicon.ico", :rel => "icon", :type => "image/x-icon"}
%link{:href => "/favicon.ico", :rel => "Shortcut Icon", :type => "image/x-icon"}
/ Tweaks
%meta{:content => "no", "http-equiv" => "imagetoolbar"}
%meta{:content => "true", :name => "MSSmartTagsPreventParsing"}
%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
%meta{:content => "width=device-width", :name => "viewport"}
= javascripts "modernizr-1.7.min"

= stylesheets :application
%link{:href => "/javascripts/fancybox/jquery.fancybox-1.3.4.css", :media => "all", :rel => "stylesheet", :type => "text/css"}